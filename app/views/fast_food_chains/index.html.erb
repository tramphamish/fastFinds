                      <li> Hey <%= current_user.first_name %>!</li><li><a href="/user/#{@user.id}/edit">my profile</a></li>
                      <li><a href="/logout"> log out</a></li>
                    <% else %>
                      <li><a href="/signup">sign up</a></li>
                      <li><a href="/login">login</a></li>
                    <% end %>
                  </ul>
                </li>
              </ul>
            </div>
          </div>
