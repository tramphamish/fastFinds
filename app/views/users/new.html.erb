<!-- SIGN UP SECTION -->
<section class="clearfix signUpSection">
  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-xs-12">
        </div>
      </div>
      <div class="col-sm-8 col-xs-12">
        <div class="signUpFormArea">
          <div class="priceTableTitle">
            <h2>Account Registration</h2>
            <p>Please fill out the fields below to create your account. If you already have an account, please, <a href="/login">click here</a>.</p>
          </div>
          <div class="signUpForm">
            <%= form_tag "/users", method: :post do %>
              <div class="formSection">
                <h3>Contact Information</h3>
                <div class="row">
                  <div class="form-group col-sm-6 col-xs-12">
                    <label for="first_name" class="control-label">First Name*</label>
                    <input type="text" class="form-control" id="first_name" name="first_name">
                  </div>
                  <div class="form-group col-sm-6 col-xs-12">
                    <label for="last_name" class="control-label">Last Name*</label>
                    <input type="text" class="form-control" id="last_name" name="last_name">
                  </div>
                  <div class="form-group col-xs-12">
                    <label for="email" class="control-label">E-Mail*</label>
                    <input type="email" class="form-control" id="email" name="email">
                  </div>
                </div>
              </div>
              <div class="formSection">
                <h3>Account Information</h3>
                <div class="row">
                  <div class="form-group col-xs-12">
                    <label for="phone" class="control-label">Phone*</label>
                    <input type="text" class="form-control" id="phone" name="phone">
                  </div>
                  <div class="form-group col-xs-12">
                    <label for="zip_code" class="control-label">Zip Code*</label>
                    <input type="text" class="form-control" id="zip_code" name="zip_code">
                  </div>
                  <div class="form-group col-sm-6 col-xs-12">
                    <label for="passwordFirst" class="control-label">Password*</label>
                    <input type="password" class="form-control" id="password" name="password">
                  </div>
                  <div class="form-group col-sm-6 col-xs-12">
                    <label for="passwordAgain" class="control-label">Password (re-type)*</label>
                    <input type="password" class="form-control" id="password_confirmation" name="password_confirmation">
                  </div>
                </div>
              </div>
              <div class="formSection">
                <div class="row">
                  <div class="form-group col-xs-12">
                    <div class="checkbox">
                      <label>
                        <input type="checkbox">
                        Sign me up for the E-Mail subscription.
                      </label>
                    </div>
                  </div>
                  <div class="form-group col-xs-12 mb0">
                    <button type="submit" class="btn btn-primary" value="Submit">Create Account</button>
                  </div>
                  <% end %>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

